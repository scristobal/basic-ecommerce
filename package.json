{
    "name": "shop",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "lint": "next lint",
        "types": "tsc",
        "format": "prettier --check .",
        "fix": "prettier --write . && eslint --fix .",
        "test": "npm run test:unit:headless && npm run test:component:headless && npm run test:e2e:headless",
        "cypress": "cypress open",
        "test:e2e": "start-server-and-test dev http://localhost:3000 \"cypress open --e2e\"",
        "test:e2e:headless": "start-server-and-test dev http://localhost:3000 \"cypress run --e2e\"",
        "test:component": "cypress open --component",
        "test:component:headless": "cypress run --component",
        "test:unit": "jest --watch",
        "test:unit:headless": "jest --ci"
    },
    "dependencies": {
        "autoprefixer": "10.4.14",
        "eslint": "8.45.0",
        "eslint-config-next": "13.4.10",
        "next": "13.4.10",
        "postcss": "8.4.26",
        "prettier": "^3.0.0",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "tailwindcss": "3.3.3"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^5.16.5",
        "@testing-library/react": "^14.0.0",
        "@testing-library/user-event": "^14.4.3",
        "@types/node": "20.4.2",
        "@types/react": "18.2.15",
        "@types/react-dom": "18.2.7",
        "@types/testing-library__jest-dom": "^5.14.8",
        "cypress": "^12.17.1",
        "jest": "^29.6.1",
        "jest-environment-jsdom": "^29.6.1",
        "start-server-and-test": "^2.0.0",
        "typescript": "5.1.6"
    }
}
